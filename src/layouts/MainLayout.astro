---
import Layout from "./Layout.astro";

interface Props {
  title?: string;
}

const { title = "10xCards - Nauka z fiszkami" } = Astro.props;
---

<Layout title={title}>
  <div class="min-h-screen bg-background flex flex-col">
    <header class="border-b bg-card">
      <div class="container mx-auto py-3 px-4 flex items-center justify-between">
        <a href="/" class="flex items-center gap-2">
          <img src="/logo.svg" alt="10xCards Logo" class="h-8" />
          <span class="font-bold text-xl">10xCards</span>
        </a>
        <nav class="hidden md:flex gap-6">
          <a href="/dashboard" class="text-foreground/80 hover:text-foreground">Dashboard</a>
          <a href="/flashcards" class="text-foreground/80 hover:text-foreground">Fiszki</a>
          <a href="/learning/session" class="text-primary font-medium">Nauka</a>
        </nav>
        <div class="flex items-center gap-4">
          <a 
            href="/api/auth/logout" 
            class="px-4 py-1 text-sm rounded-md border border-muted hover:bg-muted transition-colors duration-200"
          >
            Wyloguj
          </a>
          <button class="md:hidden">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-menu"><line x1="4" x2="20" y1="12" y2="12"></line><line x1="4" x2="20" y1="6" y2="6"></line><line x1="4" x2="20" y1="18" y2="18"></line></svg>
          </button>
        </div>
      </div>
    </header>
    <main class="flex-1 container mx-auto py-6 px-4">
      <slot />
    </main>
    <footer class="bg-muted/20 border-t py-6">
      <div class="container mx-auto px-4 text-center text-sm text-muted-foreground">
        &copy; {new Date().getFullYear()} 10xCards. Wszystkie prawa zastrze≈ºone.
      </div>
    </footer>
  </div>
</Layout> 